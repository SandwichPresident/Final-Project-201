<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FinalProject201.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FinalProject201"
    Title="FinalProject201">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />


    <ShellContent
        Title="Menu"
        ContentTemplate="{DataTemplate local:MenuPage}"
        Route="MenuPage" />

    <TabBar>
        <Tab Title="Main">
            
            <ShellContent Title="Mains"
            ContentTemplate="{DataTemplate local:MainItemsPage}"
             Route="MainItemsPage" />
            
        </Tab>
        <Tab Title="Sides">

            <ShellContent Title="Sides"
            ContentTemplate="{DataTemplate local:SideItemsPage}"
            Route="SideItemsPage" />

        </Tab>
        <Tab Title="Desserts">

            <ShellContent Title="Desserts"
            ContentTemplate="{DataTemplate local:DessertPage}"
            Route="DessertPage" />

        </Tab>
        <Tab Title="Drinks">

            <ShellContent Title="Drinks"
            ContentTemplate="{DataTemplate local:DrinkPage}"
            Route="DrinkPage" />

        </Tab>
    </TabBar>

   

    <ShellContent
     Title="Checkout"
     ContentTemplate="{DataTemplate local:CheckoutPage}"
     Route="CheckoutPage" />

</Shell>
