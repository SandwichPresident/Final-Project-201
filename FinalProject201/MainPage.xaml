<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProject201.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="tiger.png"
                HeightRequest="100"
                Aspect="AspectFit"
                SemanticProperties.Description="tiger icon"
                />

            <Label
                Text="Welcome to Ritchie's!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Log in or create a new account below"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Create a new account below" />

            <Entry x:Name="Username"
       Placeholder="Username"
                   TextColor="Black"
       />

            <Entry x:Name="Password"
       Placeholder="Password" IsPassword="True"
                   TextColor="Black"
      />

            <Button
                x:Name="LoginBtn"
                Text="Sign Up/Log in" 
                SemanticProperties.Hint="logs you in"
                Clicked="LoginClicked"
                HorizontalOptions="Fill"
                MaximumWidthRequest="300"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
